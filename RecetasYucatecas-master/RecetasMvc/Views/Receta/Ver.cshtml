
@{
    ViewBag.Title = "Ver";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var Receta = (List<RecetaSpawn.Domain.BO.TblRecetaBO>)ViewBag.RecetaList;
}


@if (Receta.Count > 0)
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Datos de los receta</h6>
            <a href="@Url.Content("~/Receta/Agregar")" class="btn-default">Agregar</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">

                        <tr align="center">
                            <th scope="col" style="display:none"></th>
                            <th scope="col">Receta</th>
                            <th scope="col">Tiempo</th>
                            <th scope="col">Ingredientes</th>
                            <th scope="col">Preparacion</th>
                            <th scope="col">Opcion</th>
                        </tr>

                    </thead>

                    <tbody>

                        @foreach (RecetaSpawn.Domain.BO.TblRecetaBO item in Receta)
                        {
                            <tr>
                                <td style="display:none">@item.ID_RECETA</td>
                                <td>@item.RECETA</td>
                                <td>@item.TIEMPO</td>
                                <td>@item.INGREDIENTES</td>
                                <td>@item.PREPARACION</td>
                                @*No hare lo que habia pensando no se porque fallo*@
                                <td align="center">
                                    <button type="button" class="btn btn-warning btn-sm">Editar</button>
                                    <button type="button" onclick="Administrador.updateStatus('@item.IDAdmin', '0')" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <h2>tabla Vacia</h2>

}